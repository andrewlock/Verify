# Auto detect text files and perform LF normalization
* text=auto eol=crlf
*.xml     -text 
*.targets -text
*.txt -text

# Custom for Visual Studio
*.cs     diff=csharp
*.sln    merge=union
*.csproj merge=union
*.vbproj merge=union
*.fsproj merge=union
*.dbproj merge=union

# Denote all files that are truly binary and should not be modified.
*.dll binary
*.exe binary
*.snk binary
*.pdb binary
*.png binary
*.bmp binary
*.tif binary

src/Verify/EmptyFiles/* binary

*.verified.txt  text working-tree-encoding=UTF-8 eol=lf
*.verified.json text working-tree-encoding=UTF-8 eol=lf
*.verified.html text working-tree-encoding=UTF-8 eol=lf
*.verified.sql  text working-tree-encoding=UTF-8 eol=lf
*.verified.xml  text working-tree-encoding=UTF-8 eol=lf
*.verified.csv  text working-tree-encoding=UTF-8 eol=lf
